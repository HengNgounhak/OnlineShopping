<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AwesomeShop</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/Assets/CSS/homePage.css">
    <link rel="stylesheet" href="/Assets/CSS/productPage.css">
    <link rel="stylesheet" href="/Assets/Icons/fontawesome-free-5.15.1-web/css/all.css">
</head>

<body>
    <header>
        <div>
            <a href="" class="logo">
                Awesome<span>Shop</span>
                </a>
        </div>
        <div class="rightNav">
            <% if(user){ %>
                <form action="http://localhost:3000/logout" method="post">
                    <a href="" class="needHelp" style="font-size: 32px; color: rgb(0, 140, 255);">
                        <i class="fas fa-user-circle"></i>
                        <%= user.username %>
                    </a>
                    <button type="submit" id="status" value="">
                                    Log Out
                    </button>
                </form>
                <% } else { %>
                    <a href="" class="needHelp">
                        <i class="fas fa-question-circle"></i>Need Help
                    </a>
                    <a href="http://localhost:3000/signin">
                        <button id="status" value="Join">Join</button>
                    </a>
                    <% } %>
        </div>
    </header>


    <section class="headPicture">
        <div>
            <center>
                <h1>Shop your designer dresses</h1>
                <h6>Ready to wear dereses tailored for you from online. Hurry up while stock lasts</h6>
                <input type="text" placeholder="Search your products from here">
            </center>
        </div>
    </section>

    <section class="allCard">
        <div class="card" id="card1">
            <div id="leftCard">
                <h3>Coupon Saving</h3>
                <p>Up to 60% off every essentials</p>
                <button>Shop Coupons</button>
            </div>
            <div>
                <img src="/Assets/Image/icons8-coupon-100.png">
            </div>
        </div>
        <div class="card" id="card2">
            <div id="leftCard">
                <h3>Free Delivery</h3>
                <p>With selected items</p>
                <button>Delivery Now</button>
            </div>
            <div>
                <img src="/Assets/Image/checked-truck.png">
            </div>
        </div>
        <div class="card" id="card3">
            <div id="leftCard">
                <h3>Gift Voucher</h3>
                <p>With personal core items</p>
                <button>Gift Now</button>
            </div>
            <div>
                <img src="/Assets/Image/gift--v1.png">
            </div>
        </div>
    </section>

    <table class="bottomContainer">
        <tr>
            <td class="sideNav">
                <ul>
                    <li>
                        <a href="http://localhost:3000/#v-pills-home"><img src="/Assets/Image/icon_laptop.png"><span>Electronics</span></a>
                    </li>
                    <li>
                        <a href="http://localhost:3000/#v-pills-profile"><img src="/Assets/Image/icon_bag-front-view.png"><span>Hand bacge</span></a>
                    </li>
                    <li>
                        <a href="http://localhost:3000/#v-pills-messages"><img src="/Assets/Image/icon_wallet.png"><span>Wallet</span></a>
                    </li>
                    <li>
                        <a href="http://localhost:3000/#v-pills-settings"><img src="/Assets/Image/icon_clothes.png"><span>Clothes</span></a>
                    </li>
                </ul>
            </td>
            <td class="products">
                <div class="productDetail">
                    <div class="productView">
                        <img src="/Assets/uploadImage/<%= product._id %>">
                        <div class="productColor">
                            <button>                        
                                <img src="/Assets/uploadImage/<%= product._id %>">
                            </button>
                            <button>                        
                                <img src="/Assets/uploadImage/<%= product._id %>">
                            </button><button>                        
                                <img src="/Assets/uploadImage/<%= product._id %>">
                            </button>
                        </div>
                        <div class="discount">
                            <span>
                                <%= product.discountPrice %>%
                            </span>
                        </div>
                    </div>

                    <div class="productDescription">
                        <div class="header">
                            <h3>
                                <%= product.name %>
                            </h3>
                            <div class="productPrice">
                                <span class="nondiscount"> $<%= product.price %> </span>
                                <span class="discount"> $<%= (product.price - ((product.discountPrice*product.price)/100)).toFixed(2) %> </span>
                            </div>
                        </div>
                        <div class="text">
                            <p>
                                <%= product.detail %>
                            </p>
                        </div>
                        <div class="button">
                            <a><button class="cart" onclick="cartProduct()"><i class="fas fa-shopping-cart"></i><span> Cart</span></button></a>
                            <br>
                            <a href=""><button class="tag">Male T-Shirt</button></a>
                            <a href=""><button class="tag">Single Color</button></a>
                        </div>
                    </div>
                </div>
                <div class="comments">
                    <h1>Comments</h1>
                    <div class="customerComments">
                        <div class="header">
                            <div class="icon">
                                <i class="fas fa-user-circle"></i>
                            </div>
                            <p>
                                <span>Anonymous</span>
                                <br> Today 4:21pm - 12.06.2020
                            </p>
                        </div>
                        <p>
                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has
                            survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged.
                        </p>
                    </div>

                    <div class="customerComments">
                        <div class="header">
                            <div class="icon">
                                <i class="fas fa-user-circle"></i>
                            </div>
                            <p>
                                <span>Anonymous</span>
                                <br> Today 4:21pm - 12.06.2020
                            </p>
                        </div>

                        <p>
                            Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has
                            survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged.
                        </p>
                    </div>

                    <!-- <form action="http://localhost:3000/comment" method="POST" value="" id="userComment"> -->
                    <fieldset class="writeComment">
                        <legend>Write your review here</legend>
                        <textarea class="form-control" name="comment"></textarea>
                    </fieldset>
                    <div class="summit">
                        <button type="submit" class="send" value="" id="saveBtn"><i class="fas fa-paper-plane" ></i> Send</button>
                        <button onclick="cartProduct()"><i class="fas fa-times"></i> Discard</button>
                    </div>
                    <!-- </form> -->
                </div>
            </td>
        </tr>
    </table>
    <div class="modal fade" id="modelToSignIN">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="http://localhost:3000/signin">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">We nee your Sign In</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modelToCart">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">You buy this product.</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Canel</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Buy</button>
                </div>

            </div>
        </div>
    </div>
    <script>
        function cartProduct() {
            const status = document.getElementById('status').value;
            const alertToSignIn = document.getElementById('status');
            if (status == "Join") {
                $('#modelToSignIN').modal('toggle');
            } else {
                $('#modelToCart').modal('toggle');
            }
        }
    </script>
</body>

</html>