<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AwesomeShop</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/Assets/CSS/homePage.css">
    <link rel="stylesheet" href="/Assets/Icons/fontawesome-free-5.15.1-web/css/all.css">
</head>

<body>
    <header>
        <div>
            <a href="" class="logo">
                Awesome<span>Shop</span>
            </a>
        </div>
        <div class="rightNav">
            <% if(user){ %>
                <form action="http://localhost:3000/logout" method="post">
                    <a href="" class="needHelp" style="font-size: 32px; color: rgb(0, 140, 255);">
                        <i class="fas fa-user-circle"></i>
                        <%= user.username %>
                    </a>
                    <button type="submit" id="status" value="">
                                    Log Out
                    </button>
                </form>
                <% } else { %>
                    <a href="" class="needHelp">
                        <i class="fas fa-question-circle"></i>Need Help
                    </a>
                    <a href="http://localhost:3000/signin">
                        <button id="status" value="Join">Join</button>
                    </a>
                    <% } %>
        </div>
    </header>


    <section class="headPicture">
        <div>
            <center>
                <h1>Shop your designer dresses</h1>
                <h6>Ready to wear dereses tailored for you from online. Hurry up while stock lasts</h6>
                <input type="text" placeholder="Search your products from here">
            </center>
        </div>
    </section>

    <section class="allCard">
        <div class="card" id="card1">
            <div id="leftCard">
                <h3>Coupon Saving</h3>
                <p>Up to 60% off every essentials</p>
                <button>Shop Coupons</button>
            </div>
            <div>
                <img src="/Assets/Image/icons8-coupon-100.png">
            </div>
        </div>
        <div class="card" id="card2">
            <div id="leftCard">
                <h3>Free Delivery</h3>
                <p>With selected items</p>
                <button>Delivery Now</button>
            </div>
            <div>
                <img src="/Assets/Image/checked-truck.png">
            </div>
        </div>
        <div class="card" id="card3">
            <div id="leftCard">
                <h3>Gift Voucher</h3>
                <p>With personal core items</p>
                <button>Gift Now</button>
            </div>
            <div>
                <img src="/Assets/Image/gift--v1.png">
            </div>
        </div>
    </section>

    <div class="bottomContainer d-flex flex-row w-100">
        <div class="sideNav nav flex-column" id="tabList" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true"><img src="/Assets/Image/icon_laptop.png"><span>Electronics</span></a>
            <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false"><img src="/Assets/Image/icon_bag-front-view.png"><span>Hand bacge</span></a>
            <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false"><img src="/Assets/Image/icon_wallet.png"><span>Wallet</span></a>
            <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false"><img src="/Assets/Image/icon_clothes.png"><span>Clothes</span></a>
            <!-- <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Product</a>
            <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Users</a>
            <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Purchase Order</a>
            <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">History</a> -->
        </div>
        <div class="tab-content " id="content">
            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                <div class="products" id="electronics">

                    <!-- <center>
                        <a href="" class="loadMore"><button><span>Loading More</span></button></a>
                    </center> -->
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                <div class="products" id="handbacgs">
                    <!-- <center>
                        <a href="" class="loadMore"><button><span>Loading More</span></button></a>
                    </center> -->
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                <div class="products" id="wallet">

                    <!-- <center>
                        <a href="" class="loadMore"><button><span>Loading More</span></button></a>
                    </center> -->
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                <div class="products" id="clothes">

                    <!-- <center>
                        <a href="" class="loadMore"><button><span>Loading More</span></button></a>
                    </center> -->
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modelToSignIN">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="http://localhost:3000/signin">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Sign In to cart the products</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modelToCart">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">You buy this product.</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Canel</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Buy</button>
                </div>

            </div>
        </div>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/Assets/JS/homePage.js"></script>
</body>

</html>